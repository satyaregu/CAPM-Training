{
  "name": "capmapp",
  "version": "1.0.0",
  "description": "A simple CAP project.",
  "dependencies": {
    "20": "^3.1.9",
    "@cap-js-community/odata-v2-adapter": "^1.15.8",
    "@cap-js/hana": "^2",
    "@sap/cds": "^9.6.4",
    "@sap/cds-odata-v2-adapter-proxy": "^1.9.7",
    "@sap/hana-client": "^2.27.23",
    "express": "^4",
    "npm": "^11.8.0",
    "use": "^3.1.1",
    "@sap/xssec": "^4"
  },
  "devDependencies": {
    "@cap-js/sqlite": "^2",
    "@sap/cds-dk": "^9",
    "cds-plugin-ui5": "^0.13.0"
  },
  "scripts": {
    "start": "cds-serve",
    "Runmyapp": "cds watch",
    "watch-studentapp": "cds watch --open com.satya.studentapp/index.html?sap-ui-xx-viewCache=false --livereload false",
    "watch-purchaseorderapp": "cds watch --open com.satya.purchaseorderapp/index.html?sap-ui-xx-viewCache=false --livereload false"
  },
  "private": true,
  "workspaces": [
    "app/*"
  ],
  "sapux": [
    "app/studentapp",
    "app/purchaseorderapp"
  ],
  "cds": {
    "requires": {
      "db": "hana",
      "uaa": {
        "kind": "xsuaa"
      },
      "auth": {
        "[development]": {
          "strategy": "mocked",
          "users": {
            "satya": {
              "roles": [
                "Viewer"
              ],
              "userAttributes": {
                "BankName": [
                  "SBI"
                ]
              }
            },
            "jyothi": {
              "roles": [
                "Viewer",
                "Admin"
              ],
              "userAttributes": {
                "BankName": [
                  "$UNRESTRICTED"
                ]
              }
            }
          }
        },
        "[production]": {
          "strategy": "mocked"
        }
      }
    }
  }
}
